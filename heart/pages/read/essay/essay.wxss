.contain{
  padding: 30rpx;
}
.header{
  width: 100%;
  overflow: hidden;
}
.left{
  float: left;
  width: 50%;
  position: relative;
}
.left>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50% 50%;
}
.user{
  font-size: 30rpx;
  position: absolute;
  top: 0;
  left: 120rpx;
  color: #999999;
}
.user>text{
  display: block;
}
.name{
  font-size: 35rpx;
  color: lightskyblue;
}
.right{
  float: right;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  color: #666666;
}
.right>image{
  width: 90rpx;
  height: 90rpx;
}
.text{
  margin-top: 30rpx;
  font-size: 36rpx;
  color: #333333;
}
.text>text:first-child{
  font-size: 41rpx;
  color: black;
  font-weight: 700;
}
.edit{
  text-align: center;
  font-size: 30rpx;
  color: #999999;
}