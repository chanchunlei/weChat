
.loopImg{
  width: 100%;
  height: 150px; 
}

.articles-swiper {
   height: calc(100% - 150px);
}
.articles {
   width: calc(100% + 30rpx);
   height: 100%;
}
.box{
  margin: 20rpx 50rpx 20rpx 20rpx;
  border: 1px solid #ebebeb;
  border-radius: 5px;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.1);
  background: rgba(255,238,170,0.1);
}
.article-item {
  padding: 30rpx;
}

.article-header {
  margin-bottom: 5px;
}

.article-title {
  width: 80%;
  display: inline-block;
  font-size: 16px;
  line-height: 22px;
}

.article-type {
  float: right;
  font-size: 10px;
  font-weight: 200;
  padding: 5px 5px 5px 8px;
  color: #89bdf7;
  border: 1px solid #89bdf7;
  border-radius: 5px;
  letter-spacing: 3px;
}

.article-author {
  margin-top: 10px;
  font-size: 14px;
  color: #666666;
}

.article-content {
  font-size: 14px;
  line-height: 1.5;
  color: #999999;
}
.model_black{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 2;
  top: 0;
  left: 0;
  display: none;
}
.model_massage{
  position: fixed;
  bottom: -430rpx;
  left: 0;
  transition: all 0.3s;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  border-radius: 3px 3px 0 0;
  z-index: 3;
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  padding-top: 120rpx;
}
.model_img{
  position: absolute;
  top: -80rpx;
  left: 50%;
  margin-left: -85rpx;
  background-color: #fff;
  width: 170rpx;
  height: 170rpx;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  border-radius: 50% 50%;
  padding: 6rpx;
}
.model_img>image{
  width: 100%;
  height: 100%;
  border-radius: 50% 50%;
}
.connect{
  width: 90%;
  margin: 0 5%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  text-align: center;
  color: #333;
}
.model_massage>.connect:last-child{
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}