.contain{
 background-image: url(https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1512564361958&di=6e8616a7baeaaa91bede8e3f385223a6&imgtype=0&src=http%3A%2F%2Fimg.mp.itc.cn%2Fupload%2F20161212%2Fd08ffa8e199048c3882bbd90f783556c_th.gif);
 background-repeat: no-repeat;
 background-size: 100% 100%;
 height: 50%;
}
.searchbar-result{
  margin-top: 0;
}
.weui-search-bar__cancel-btn{
  color: #1296db;
}
.city{
  font-size: 55rpx;
  width: 50%;
  color: #fff;
  padding: 100rpx 0 0 100rpx;
  float: left;
  box-sizing: border-box;
}
.city>text:last-child{
  display: block;
  font-size: 50rpx;
}
.temperature{
  float: right;
  font-size: 80rpx;
  padding: 100rpx 100rpx 0 0;
  box-sizing: border-box;
  color: #fff;
}
.title{
  height: 100rpx;
  line-height: 100rpx;
  color: #666;
  font-size: 40rpx;
  text-align: center;
  border-bottom: 2px solid rgba(0, 0, 0, .2);
}
.box{
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.future{
  border-bottom: 1px solid rgba(0, 0, 0, .2);
  display: flex;
  justify-content: flex-start;
  text-align: left;
  line-height: 100rpx;
  color: #666;
}
.imgs{
  width: 25%;
  vertical-align: middle;
}
.date{
  width: 45%;
}
.feel{
  width: 30%;
}
.imgs>image{
  height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}
.weui-footer{
  margin-top: 30rpx;
}
.model_black{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 2;
  top: 0;
  left: 0;
  display: none;
}
.model_massage{
  position: fixed;
  bottom: -430rpx;
  left: 0;
  transition: all 0.3s;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  border-radius: 3px 3px 0 0;
  z-index: 3;
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  padding-top: 120rpx;
}
.model_img{
  position: absolute;
  top: -80rpx;
  left: 50%;
  margin-left: -85rpx;
  background-color: #fff;
  width: 170rpx;
  height: 170rpx;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  border-radius: 50% 50%;
  padding: 6rpx;
}
.model_img>image{
  width: 100%;
  height: 100%;
  border-radius: 50% 50%;
}
.connect{
  width: 90%;
  margin: 0 5%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  text-align: center;
  color: #333;
}
.model_massage>.connect:last-child{
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}