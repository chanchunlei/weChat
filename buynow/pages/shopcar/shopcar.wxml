<view class='container'>
  <view class='shop_box'>
    <block wx:for="{{carlist}}" wx:key="{{index}}">
      <checkbox-group>
        <view class='shopcar'>
          <view bindtap='checkboxChanges' data-index='{{index}}' class='check_box'>
            <label class="checkbox">
              <checkbox value="{{item.gid}}" checked='{{item.checked}}'/>
            </label>
          </view>
          <view bindtap='showDetail' data-gid='{{item.g_id}}' class='img_box'>
            <image mode='aspectFit' src='{{item.pic}}'></image> 
          </view>
          <view class='msg_box'>
            <view bindtap='showDetail' data-gid='{{item.g_id}}'>
              <text class='msg_title'>{{item.g_name}}</text>
              <text class='spec'>颜色：{{item.color}} 规格：{{item.spec}}</text>
              <view class='prise_box'>
                <text class='RMB'>￥</text><text class='prise'>{{item.price}}</text>
              </view>
            </view>
            <view class="stepper">
              <!-- 减号 -->
              <text class="{{minusStatuses[index]}}" data-index="{{index}}" bindtap="bindMinus">-</text>
              <!-- 数值 -->
              <input type="number" bindchange="bindManual" value="{{item.num}}" disabled/>
              <!-- 加号 -->
              <text class="normal" data-index="{{index}}" bindtap="bindPlus">+</text>
            </view>
            <view class='delete'>
              <text data-code="{{item.coding}}" catchtap='deleteGoods' class="iconfont icon-shanchu"></text> 
            </view>
          </view>
        </view>
      </checkbox-group> 
    </block>  
  </view>        
  <!--结算  -->
  <view class='balance'>
     <view class='all_goods'>
        <checkbox-group bindchange="checkboxAll">
          <label class="checkbox">
              <checkbox value="0" checked='{{check}}'/>
          </label>
          <text>全选</text>
        </checkbox-group>
     </view>
     <view class='all_money'>
      <text>总金额：</text>
      <text>{{allmoney}}</text>
     </view>
     <view bindtap='FillIn' class='pay_money'>
      <text>下单</text>
     </view>
  </view>
</view>
