<view class='container'>
  <view class='logos'>
     <image mode="aspectFill" src='/images/logo.png'></image>
  </view>
  <view class='form_box'>
     <form bindsubmit="formSubmit">
       <view class='inp_box'>
         <label>
           <text>账号</text>
           <input type='text' name="user_name"></input>
         </label>  
         <label>
           <text>密码</text>
           <input type='password' name="user_pwd"></input>
         </label>  
       </view>
       <view class='btn'>
          <button formType="submit">登录</button>
       </view>
     </form>
  </view>
</view>