/*加入购物车  */
.join{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
  border-top: 3rpx solid #eeeeee;
  z-index: 501;
  display: flex;
  justify-content: space-between;
  padding-left: 35rpx;
  box-sizing: border-box;
  height: 130rpx;
  line-height: 130rpx;
}
