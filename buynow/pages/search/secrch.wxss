/**index.wxss**/
/*搜索框  */
.page__bd{
  background-color: #0a7fd7;
  padding: 3% 5% 3% 5%;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}
.logo{
  float: left;
  width: 28px;
  height: 28px;
}
.logo>image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx 0 0 10rpx;
}
.weui-search-bar{
  border-radius: 0 10rpx 10rpx 0;
  padding: 0;
  text-align: left;
  border: none;
}
.weui-search-bar__form{
  border: none;
}
.weui-search-bar__input{
  color: #626262;
}
.weui-search-bar__label{
  text-align: left;
  padding-left: 2%;
}
.weui-search-bar__text{
  color: #626262;
  vertical-align: top;
}
.weui-icon-search{
  padding: 0 0 0 1%;
  box-sizing: border-box;
  vertical-align: top;
}
.weui-search-bar__cancel-btn{
  margin: 0;
  color: #5f5f5f;
  font-size: 25rpx;
  padding: 0 15rpx;
}
.searchbar-result{
  position: absolute;
  left: 0;
  padding-right: 3%;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
/*历史记录  */
.search_history{
  width: 100%;
  padding: 25rpx 4%;
  box-sizing: border-box;
}
.history_title{
  font-size: 14px;
  color: #5b5b5b;
  padding: 0 20rpx;
  border-bottom: 1px solid rgba(0,0,0,.2);
  box-sizing: border-box;
}
/*是否隐藏  */
.history_list{
  display: none;
  width: 100%;
  padding: 20rpx 0;
  font-size: 12px;
}
.history_concent{
  display: inline-block;
  padding: 0 15rpx;
  box-sizing: border-box;
  color: #949494;
}
.history_box{
  text-align: center;
  color: #979797;
  padding: 60rpx 0 ;
  font-size: 15px;
  display: block;
}
.clear_history{
  text-align: center;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 20rpx;
}
.clear_history>image{
  width: 330rpx;
  height: 100%;
}