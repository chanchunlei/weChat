.container{
  background-color: #eeeeee;
}
/*头像信息  */
.head_box{
  width: 100%;
  text-align: center;
  height: 300rpx;
  background-color: #097ed6; 
}
.user_img{
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  position: relative;
  z-index: 1;
}
.user_img>.icon-xiugai{
  position: absolute;
  width: 50rax;
  height: 50rpx;
  padding: 6rpx;
  background-color: #097ed6;
  border-radius: 50%;
  line-height: 55rpx;
  top: 50%;
  left: 50%;
  margin-top: 25rpx;
  margin-left: 25rpx;
  z-index: 3;
}
.user_header{
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-size: 100% 100%;
  vertical-align: middle;
}
.user_name{
  font-size: 38rpx;
  color: #fff;
}
/*功能列表  */
.functions{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  margin-top: 15rpx;
}
.functions>view{
  width: 33%;
  text-align: center;
  height: 300rpx;
  background-color: #fff;
  margin-top: 5rpx;
}
.icon_box>.iconfont{
  font-size: 70rpx;
  color: #ffffff;
}
.icon_box{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 20rpx;
  margin: 55rpx auto 10rpx;
}
.infor{
  background-color: #0abeec;
}
.location{
  background-color: #0048a5;
}
.share{
  background-color: #c30315;
}
.return_goods{
  background-color: #5c08bb;
}
.app_return{
  background-color: #c704dd;
}
.infor_text{
  font-size: 37rpx;
  color: #696969;
  font-weight: 400;
}
/*客户服务  */
.client{
  width: 100%;
  margin: 15rpx 0;
  padding: 0 35rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.client>text{
  display: block;
  font-size: 40rpx;
  color: #323232;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 4rpx solid #eeeeee;
}
.client_box{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.client_box>view{
  width: 50%;
  height: 275rpx;
  text-align: center;
}
.icon_box2{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 20rpx;
  margin: 45rpx auto 10rpx; 
}
.icon_box2>.iconfont{
  font-size: 70rpx;
  color: #ffffff;
}
.phone{
  background-color: #eb5806;
}
.view{
  background-color: #3dd19c;
}
/*了解订货  */
.order_box{
  width: 100%;
  font-size: 40rpx;
  color: #353535;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 35rpx;
  box-sizing: border-box;
  margin: 15rpx 0;
  background-color: #ffffff;
}